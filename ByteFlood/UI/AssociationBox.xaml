<Window x:Class="ByteFlood.AssociationBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File associations" Height="171" Width="204" ResizeMode="NoResize" Loaded="Window_Loaded" PreviewMouseUp="Window_MouseUp">
    <Grid>
        <TextBlock Height="17" HorizontalAlignment="Left" Margin="12,12,0,0" Text="Associate ByteFlood with" VerticalAlignment="Top" />
        <CheckBox Content=".torrent files" Height="16" HorizontalAlignment="Left" Margin="12,35,0,0" Name="files" VerticalAlignment="Top" />
        <CheckBox Content="Magnet links" Height="16" HorizontalAlignment="Left" Margin="12,57,0,0" Name="magnets" VerticalAlignment="Top" />
        <CheckBox Content="Remind me again" Height="16" HorizontalAlignment="Left" Margin="12,79,0,0" Name="remind" VerticalAlignment="Top" />
        <Button Content="OK" Height="23" HorizontalAlignment="Center" Margin="0,0,0,5" Name="button1" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</Window>
