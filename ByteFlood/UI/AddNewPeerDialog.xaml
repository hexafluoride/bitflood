<Window x:Class="ByteFlood.UI.AddNewPeerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add a new peer" Height="125" Width="283"
        TextOptions.TextFormattingMode="Display" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Canvas>
        <TextBlock Text="Enter the IP:port / [IPv6]:port of the peer to add:" Canvas.Left="12" Canvas.Top="10" />
        <TextBox Height="23" Text="{Binding IP}" Width="244" Canvas.Left="10" Canvas.Top="29"/>
        <Button IsCancel="True" Content="Cancel" Canvas.Left="210" Canvas.Top="59" Click="Commands_Cancel"/>
        <Button IsDefault="True" Content="Add" Canvas.Left="167" Canvas.Top="59" Width="38" Click="Commands_OK"/>
    </Canvas>
</Window>
